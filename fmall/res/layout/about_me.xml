<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4D4D4" >

     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FF5000"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

         <TextView
            android:id="@+id/iv_top_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="返回"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:drawableLeft="@drawable/btn_back_selector" />

        <TextView
            android:id="@+id/tv_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="关于我们"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_top_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_more_selector" />
        
	</RelativeLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:orientation="vertical" 
        android:layout_weight="4">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/shapebackground"
            android:src="@drawable/ic_launcher"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="肥喵： v1.2.3.4.5.6" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:background="#d4d4d4"
        android:layout_height="120dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_weight="3" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/shapebackground"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="2dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/nice"
                android:layout_weight="8" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点个赞" 
                android:textColor="#000000"
                android:layout_weight="2"/>
            
        </LinearLayout>
        
        

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1" 
            android:background="@drawable/shapebackground"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="12dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:src="@drawable/bad" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="踩一脚"
                android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_weight="2"
        >
        
          <LinearLayout 
                style="@style/leba_bg_layout">                    
                <!--  反馈建议 	-->   
                <LinearLayout 
                    style="@style/leba_bg_top_layout">
                    <TextView android:textSize="16.0dip" 
                              android:textColor="#ff333333" 
                              android:layout_width="wrap_content" 
                              android:layout_height="wrap_content" 
                              android:layout_marginLeft="12.0dip" 
                              android:text="肥喵协议" 
                              android:layout_weight="1.0" />
                    <ImageView android:layout_width="wrap_content" 
                               android:layout_height="wrap_content" 
                               android:layout_marginRight="12.0dip" 
                               android:src="@drawable/arrow_right"/>
                </LinearLayout>
                
                <View android:background="@drawable/leba_shape_line" 
                      android:layout_width="fill_parent"
                      android:layout_height="1.0px" />
                
                <!-- 关于 -->   
                <LinearLayout 
                    style="@style/leba_bg_bottom_layout">
                    <TextView android:textSize="16.0dip" 
                        android:textColor="#ff333333" 
                        android:layout_width="0dp" 
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="12.0dip" 
                        android:text="客服热线：800-82080000" 
                        android:layout_weight="1.0" />
                </LinearLayout>                             
            </LinearLayout> 
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9C9C9C"
            android:text="肥喵一次      喵一次肥一次"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="bigmiao.com"
            android:textColor="#9C9C9C"
             />

    </LinearLayout>

  
</RelativeLayout>